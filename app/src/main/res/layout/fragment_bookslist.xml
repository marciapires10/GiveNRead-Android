<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:rowCount="6"
        android:columnCount="1"
        tools:context=".BooksListFragment">

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/to_give"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="24sp">
        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_bookList1_RecyclerView"
            android:scrollbars="horizontal"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_book_to_list"
            android:layout_row="1"
            android:layout_column="0"
            android:id="@+id/addBookToGive">
        </Button>

        <Button
            android:id="@+id/seeAllToGive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:layout_gravity="end"
            android:text="@string/see_all"></Button>

        <!--<Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_row="2">
        </Space>-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_row="2"
            android:layout_margin="20dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to_read"
            android:layout_row="3"
            android:layout_column="0"
            android:textSize="24sp">
        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_bookList2_RecyclerView"
            android:scrollbars="horizontal"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_book_to_list"
            android:layout_row="4"
            android:layout_column="0"
            android:id="@+id/addBookToRead">
        </Button>

        <Button
            android:id="@+id/seeAllToRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:layout_gravity="end"
            android:text="@string/see_all"></Button>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_row="5">
        </Space>

    </GridLayout>
</ScrollView>